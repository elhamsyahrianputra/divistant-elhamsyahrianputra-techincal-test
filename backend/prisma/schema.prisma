// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "generated"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Book {
  id           String    @id @default(uuid())
  title        String
  isbn         String?   @unique
  published_at DateTime?
  coverUrl     String?
  pages        Int?
  description  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("books")
}
